        },
        "solved": {
          "type": "boolean"
        },
        "bigButtonInputResult": {
          "$ref": "#/definitions/modulesBigButtonInputResult"
        },
        "simonSaysInputResult": {
          "$ref": "#/definitions/modulesSimonSaysInputResult"
        },
        "passwordInputResult": {
          "$ref": "#/definitions/modulesPasswordInputResult"
        },
        "keypadInputResult": {
          "$ref": "#/definitions/modulesKeypadInputResult"
        }
      }
    },
    "protobufAny": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string"
        }
      },
      "additionalProperties": {}
    },
    "rpcStatus": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/protobufAny"
          }
        }
      }
    },
    "sessionGetBombsResponse": {
      "type": "object",
      "properties": {
        "bombs": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/bombBomb"
          }
        }
      }
    }
  }
}
